<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:students="http://io.github.jesse0722/schema/students"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
 	   http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
">

    <!--1.使用构造注入方式装配User实例 -->
    <bean id="user1" class="io.github.jesse0722.springDemo.beanAutowire.User">
        <constructor-arg index="0" value="Lee"/>
        <constructor-arg index="1" value="20"/>
    </bean>

    <!--2.使用设值注入方式装配User实例 -->
    <bean id="user2" class="io.github.jesse0722.springDemo.beanAutowire.User">
        <property name="name" value="Jack"></property>
        <property name="age" value="18"></property>
    </bean>

    <!--自动装配-->
    <!--3.使用设值注入方式装配User实例 -->

    <bean id="user" class="io.github.jesse0722.springDemo.beanAutowire.User">
        <constructor-arg index="0" value="Lee3"/>
        <constructor-arg index="1" value="20"/>
    </bean>

    <bean id="userService" class="io.github.jesse0722.springDemo.beanAutowire.UserService" autowire="byName">
    </bean>

    <students:student id="1" name="Lee"/>
</beans>
